{% extends "base.j2" %}

{% block title %}Classification Result{% endblock %}

{% block body %}
  <div class="flex justify-center items-center h-screen">
    <div class="container card flex items-center w-fit p-5">
      <div class="container flex flex-col text-center items-center m-5 gap-2">
        <h1 class="text-3xl font-bold mb-5">Classification Result</h1>
        <img
          src="{{ url_for('static', filename='img/profile.jpg') }}"
          alt="Profile Image"
          class="w-40 h-40 rounded-full"
        />
        <h2 class="text-2xl font-bold">{{ name }}</h2>
        <p class="text-xl">Result :</p>
        <p class="text-xl font-bold text-red-500 uppercase">{{ prediction }}</p>
        <a href="{{ url_for('index') }}" class="btn btn-primary mt-5 w-full"
          >Back</a
        >
      </div>
    </div>
  </div>
{% endblock %}
